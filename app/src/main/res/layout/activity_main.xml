<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    tools:ignore="HardcodedText,SmallSp"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="12dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp">

            <!-- Left Button (Hidden) -->
            <ImageButton
                android:id="@+id/ibLeftButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@null"
                android:background="@null"
                android:contentDescription="Left Arrow"
                app:tint="@color/hints" />

            <!-- Header Title -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Inventory Management"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/hints"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Right Button (Hidden) -->
            <ImageButton
                android:id="@+id/ibRightButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@null"
                android:background="@null"
                android:contentDescription="Left Arrow"/>

        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/llSearchBar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_components"
            android:gravity="center_vertical"

            app:layout_constraintTop_toBottomOf="@id/llHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/ivSearchIcon"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:contentDescription="Search Icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/hints" />

            <!-- Search Input -->
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/hints"
                android:inputType="text"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <!-- Filter Icon -->
            <ImageView
                android:id="@+id/ivFilters"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_filters"
                android:contentDescription="Filter Icon"
                android:layout_gravity="center_vertical"
                app:tint="@color/hints" />

        </LinearLayout>

        <!-- Additional Buttons -->
        <LinearLayout
            android:id="@+id/llFloatingItems"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            app:layout_constraintTop_toBottomOf="@id/llSearchBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">

            <!-- Recently Sold Filter -->
            <TextView
                android:id="@+id/tvRecentlySold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:padding="10dp"
                android:background="@drawable/bg_components"
                android:text="Recently Sold"
                android:textColor="@color/hints"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Spacer to push the icons to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- New Item Button -->
            <ImageButton
                android:id="@+id/ibNewItem"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_item"

                android:background="@drawable/bg_components"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Add Item Icon"
                app:tint="@color/hints" />

            <!-- New Folder Button -->
            <ImageButton
                android:id="@+id/ibNewFolder"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_folder"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_components"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Add Folder Icon"
                app:tint="@color/hints" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/ivSettings"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_settings"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_components"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Settings Icon"
                app:tint="@color/hints" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hints"
            android:layout_marginTop="10dp"
            android:alpha="0.2"

            app:layout_constraintTop_toBottomOf="@+id/llFloatingItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Pull to Refresh Layout -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srItemList"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/vDivider"
            app:layout_constraintBottom_toTopOf="@id/llBottomButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <!-- Recycler View for Items/Groups -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItemList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:id="@+id/llBottomButtons"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp">

            <!-- New Order Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvNewOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/components"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvNewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="New Order"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!-- Order History Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvOrderHistory"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/components"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivOrderHistory"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_order_history"
                    android:contentDescription="Order History Icon"
                    app:tint="@color/primary_text" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>